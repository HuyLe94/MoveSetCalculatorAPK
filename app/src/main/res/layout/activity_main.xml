<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".MainActivity">

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_marginTop="80dp"
        android:layout_marginBottom="80dp">

        <RelativeLayout
            android:id="@+id/filterLayout"
            android:layout_width="match_parent"
            android:layout_height="match_parent">

            <TextView
                android:id="@+id/Ability"
                android:layout_width="100sp"
                android:layout_height="25sp"
                android:layout_alignParentStart="true"
                android:layout_alignParentTop="true"
                android:layout_marginStart="10dp"
                android:text="Ability"
                android:textAlignment="center"
                android:textSize="20sp"
                android:textStyle="bold" />

            <AutoCompleteTextView
                android:id="@+id/FillAbility"
                android:layout_width="270sp"
                android:layout_height="25sp"
                android:layout_alignTop="@id/Ability"
                android:layout_alignParentEnd="true"
                android:layout_marginEnd="10dp"
                android:layout_toEndOf="@id/Ability"
                android:backgroundTint="@android:color/transparent"
                android:hint="Enter Ability Here"
                android:inputType="text|textNoSuggestions|textFilter"
                android:paddingTop="0sp"
                android:paddingBottom="0sp"
                android:textAlignment="center"
                android:textSize="20sp" />

            <TextView
                android:id="@+id/Move1"
                android:layout_width="100sp"
                android:layout_height="25sp"
                android:layout_below="@+id/Ability"
                android:layout_alignStart="@+id/Ability"
                android:layout_marginTop="10dp"
                android:text="Move 1"
                android:textAlignment="center"
                android:textSize="20sp"
                android:textStyle="bold" />

            <AutoCompleteTextView
                android:id="@+id/FillMove1"
                android:layout_width="270sp"
                android:layout_height="25sp"
                android:layout_alignTop="@id/Move1"
                android:layout_alignParentEnd="true"
                android:layout_marginEnd="10dp"
                android:layout_toEndOf="@id/Move2"
                android:backgroundTint="@android:color/transparent"
                android:hint="Enter Move Here"
                android:inputType="text|textNoSuggestions|textFilter"
                android:paddingTop="0sp"
                android:paddingBottom="0sp"
                android:textAlignment="center"
                android:textSize="20sp" />

            <TextView
                android:id="@+id/Move2"
                android:layout_width="100sp"
                android:layout_height="25sp"
                android:layout_below="@+id/Move1"
                android:layout_alignStart="@+id/Move1"
                android:layout_marginTop="10dp"
                android:text="Move 2"
                android:textAlignment="center"
                android:textSize="20sp"
                android:textStyle="bold" />

            <AutoCompleteTextView
                android:id="@+id/FillMove2"
                android:layout_width="270sp"
                android:layout_height="25sp"
                android:layout_alignTop="@id/Move2"
                android:layout_alignParentEnd="true"
                android:layout_marginEnd="10dp"
                android:layout_toEndOf="@id/Move2"
                android:backgroundTint="@android:color/transparent"
                android:hint="Enter Move Here"
                android:inputType="text|textNoSuggestions|textFilter"
                android:paddingTop="0sp"
                android:paddingBottom="0sp"
                android:textAlignment="center"
                android:textSize="20sp" />

            <TextView
                android:id="@+id/Move3"
                android:layout_width="100sp"
                android:layout_height="25sp"
                android:layout_below="@+id/Move2"
                android:layout_alignStart="@+id/Move2"
                android:layout_marginTop="10dp"
                android:text="Move 3"
                android:textAlignment="center"
                android:textSize="20sp"
                android:textStyle="bold" />

            <AutoCompleteTextView
                android:id="@+id/FillMove3"
                android:layout_width="270sp"
                android:layout_height="25sp"
                android:layout_alignTop="@id/Move3"
                android:layout_alignParentEnd="true"
                android:layout_marginEnd="10dp"
                android:layout_toEndOf="@id/Move3"
                android:backgroundTint="@android:color/transparent"
                android:hint="Enter Move Here"
                android:inputType="text|textNoSuggestions|textFilter"
                android:paddingTop="0sp"
                android:paddingBottom="0sp"
                android:textAlignment="center"
                android:textSize="20sp" />

            <TextView
                android:id="@+id/Move4"
                android:layout_width="100sp"
                android:layout_height="25sp"
                android:layout_below="@+id/Move3"
                android:layout_alignStart="@+id/Move3"
                android:layout_marginTop="10dp"
                android:text="Move 4"
                android:textAlignment="center"
                android:textSize="20sp"
                android:textStyle="bold" />

            <AutoCompleteTextView
                android:id="@+id/FillMove4"
                android:layout_width="270sp"
                android:layout_height="25sp"
                android:layout_alignTop="@id/Move4"
                android:layout_alignParentEnd="true"
                android:layout_marginEnd="10dp"
                android:layout_toEndOf="@id/Move4"
                android:backgroundTint="@android:color/transparent"
                android:hint="Enter Move Here"
                android:inputType="text|textNoSuggestions|textFilter"
                android:paddingTop="0sp"
                android:paddingBottom="0sp"
                android:textAlignment="center"
                android:textSize="20sp" />


            <TextView
                android:id="@+id/hpLabel"
                android:layout_width="100sp"
                android:layout_height="25sp"
                android:layout_below="@+id/Move4"
                android:layout_alignParentStart="true"
                android:layout_marginTop="20dp"
                android:text="HP"
                android:textAlignment="center"
                android:textSize="20sp"
                android:textStyle="bold" />

            <EditText
                android:id="@+id/hpNumber"
                android:layout_width="100dp"
                android:layout_height="35dp"
                android:layout_below="@+id/hpLabel"
                android:layout_alignParentStart="true"
                android:backgroundTint="@android:color/transparent"
                android:ems="10"
                android:hint="HP #"
                android:inputType="number"
                android:paddingTop="0sp"
                android:paddingBottom="0sp"
                android:textAlignment="center"
                android:textSize="20sp" />

            <TextView
                android:id="@+id/atkLabel"
                android:layout_width="100sp"
                android:layout_height="25sp"
                android:layout_below="@id/Move4"
                android:layout_centerHorizontal="true"
                android:layout_marginTop="20dp"
                android:text="ATK"
                android:textAlignment="center"
                android:textSize="20sp"
                android:textStyle="bold" />

            <EditText
                android:id="@+id/atkNumber"
                android:layout_width="100dp"
                android:layout_height="35dp"
                android:layout_below="@+id/atkLabel"
                android:layout_centerHorizontal="true"
                android:backgroundTint="@android:color/transparent"
                android:ems="10"
                android:hint="ATK #"
                android:inputType="number"
                android:paddingTop="0sp"
                android:paddingBottom="0sp"
                android:textAlignment="center"
                android:textSize="20sp" />

            <TextView
                android:id="@+id/defLabel"
                android:layout_width="100sp"
                android:layout_height="25sp"
                android:layout_below="@id/Move4"
                android:layout_alignParentRight="true"
                android:layout_marginTop="20dp"
                android:text="DEF"
                android:textAlignment="center"
                android:textSize="20sp"
                android:textStyle="bold" />

            <EditText
                android:id="@+id/defNumber"
                android:layout_width="100dp"
                android:layout_height="35dp"
                android:layout_below="@+id/atkLabel"
                android:layout_alignParentRight="true"
                android:backgroundTint="@android:color/transparent"
                android:ems="10"
                android:hint="DEF #"
                android:inputType="number"
                android:paddingTop="0sp"
                android:paddingBottom="0sp"
                android:textAlignment="center"
                android:textSize="20sp" />

            <TextView
                android:id="@+id/satkLabel"
                android:layout_width="100sp"
                android:layout_height="25sp"
                android:layout_below="@+id/hpNumber"
                android:layout_alignParentStart="true"
                android:layout_marginTop="20dp"
                android:text="S.ATK"
                android:textAlignment="center"
                android:textSize="20sp"
                android:textStyle="bold" />

            <EditText
                android:id="@+id/satkNumber"
                android:layout_width="100dp"
                android:layout_height="35dp"
                android:layout_below="@+id/satkLabel"
                android:layout_alignParentStart="true"
                android:backgroundTint="@android:color/transparent"
                android:ems="10"
                android:hint="S.ATK #"
                android:inputType="number"
                android:paddingTop="0sp"
                android:paddingBottom="0sp"
                android:textAlignment="center"
                android:textSize="20sp" />

            <TextView
                android:id="@+id/sdefLabel"
                android:layout_width="100sp"
                android:layout_height="25sp"
                android:layout_below="@id/atkNumber"
                android:layout_centerHorizontal="true"
                android:layout_marginTop="20dp"
                android:text="S.DEF"
                android:textAlignment="center"
                android:textSize="20sp"
                android:textStyle="bold" />

            <EditText
                android:id="@+id/sdefNumber"
                android:layout_width="100dp"
                android:layout_height="35dp"
                android:layout_below="@+id/sdefLabel"
                android:layout_centerHorizontal="true"
                android:backgroundTint="@android:color/transparent"
                android:ems="10"
                android:hint="S.DEF #"
                android:inputType="number"
                android:paddingTop="0sp"
                android:paddingBottom="0sp"
                android:textAlignment="center"
                android:textSize="20sp" />

            <TextView
                android:id="@+id/speedLabel"
                android:layout_width="100sp"
                android:layout_height="25sp"
                android:layout_below="@id/defNumber"
                android:layout_alignParentRight="true"
                android:layout_marginTop="20dp"
                android:text="SPEED"
                android:textAlignment="center"
                android:textSize="20sp"
                android:textStyle="bold" />

            <EditText
                android:id="@+id/speedNumber"
                android:layout_width="100dp"
                android:layout_height="35dp"
                android:layout_below="@+id/speedLabel"
                android:layout_alignParentRight="true"
                android:backgroundTint="@android:color/transparent"
                android:ems="10"
                android:hint="SPEED #"
                android:inputType="number"
                android:paddingTop="0sp"
                android:paddingBottom="0sp"
                android:textAlignment="center"
                android:textSize="20sp" />

            <LinearLayout
                android:id="@+id/typesLayout"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_below="@id/satkNumber"
                android:layout_marginTop="20dp"
                android:gravity="center"
                android:orientation="horizontal">

                <AutoCompleteTextView
                    android:id="@+id/type1"
                    android:layout_width="100dp"
                    android:layout_height="25sp"
                    android:layout_marginEnd="30dp"
                    android:backgroundTint="@android:color/transparent"
                    android:hint="Type 1"
                    android:inputType="text|textNoSuggestions|textFilter"
                    android:paddingTop="0sp"
                    android:paddingBottom="0sp"
                    android:textAlignment="center"
                    android:textSize="20sp"
                    android:textStyle="bold" />

                <AutoCompleteTextView
                    android:id="@+id/type2"
                    android:layout_width="100dp"
                    android:layout_height="25sp"
                    android:backgroundTint="@android:color/transparent"
                    android:hint="Type 2"
                    android:inputType="text|textNoSuggestions|textFilter"
                    android:paddingTop="0sp"
                    android:paddingBottom="0sp"
                    android:textAlignment="center"
                    android:textSize="20sp"
                    android:textStyle="bold"

                    />
            </LinearLayout>

            <Button
                android:id="@+id/startSearch"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@id/typesLayout"
                android:layout_alignParentEnd="true"
                android:layout_marginTop="20dp"
                android:layout_marginEnd="30dp"
                android:onClick="updateList"
                android:text="Search" />

            <Button
                android:id="@+id/updateData"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@id/typesLayout"
                android:layout_alignParentStart="true"
                android:layout_marginStart="30dp"
                android:layout_marginTop="20dp"
                android:backgroundTint="#1C49BC"
                android:onClick="updateList"
                android:text="Update"
                android:textColor="#FFFFFF"
                android:textColorHighlight="#7A1E1E"
                android:textColorLink="#D51D1D"
                android:textStyle="bold" />

            <Button
                android:id="@+id/deleteData"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@id/typesLayout"
                android:layout_alignParentStart="true"
                android:layout_marginStart="150dp"
                android:layout_marginTop="20dp"
                android:backgroundTint="#1C49BC"
                android:onClick="updateList"
                android:text="Delete"
                android:textColor="#FFFFFF"
                android:textColorHighlight="#7A1E1E"
                android:textColorLink="#D51D1D"
                android:textStyle="bold" />

            <TextView
                android:id="@+id/excludeText"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@id/startSearch"
                android:layout_centerHorizontal="true"
                android:layout_marginTop="20dp"
                android:gravity="center"
                android:text="Exclude Forms"
                android:textSize="22sp"
                android:textStyle="bold" />

            <CheckedTextView
                android:id="@+id/megaBox"
                android:layout_width="wrap_content"
                android:layout_height="32dp"
                android:layout_below="@id/excludeText"
                android:layout_alignParentStart="true"
                android:layout_marginStart="10dp"
                android:layout_marginTop="20dp"
                android:checkMark="?android:attr/listChoiceIndicatorMultiple"
                android:checked="false"
                android:gravity="center"
                android:text="Mega"
                android:textSize="22dp" />

            <CheckedTextView
                android:id="@+id/alolanBox"
                android:layout_width="wrap_content"
                android:layout_height="32dp"
                android:layout_below="@id/excludeText"
                android:layout_centerHorizontal="true"
                android:layout_marginTop="20dp"
                android:checkMark="?android:attr/listChoiceIndicatorMultiple"
                android:checked="false"
                android:gravity="center"
                android:text="Alola"
                android:textSize="22dp" />

            <CheckedTextView
                android:id="@+id/hisuianBox"
                android:layout_width="wrap_content"
                android:layout_height="32dp"
                android:layout_below="@id/excludeText"
                android:layout_alignParentRight="true"
                android:layout_marginTop="20dp"
                android:layout_marginEnd="10dp"
                android:checkMark="?android:attr/listChoiceIndicatorMultiple"
                android:checked="false"
                android:gravity="center"
                android:text="Hisui"
                android:textSize="22dp" />

            <CheckedTextView
                android:id="@+id/paldeanBox"
                android:layout_width="wrap_content"
                android:layout_height="32dp"
                android:layout_below="@id/megaBox"
                android:layout_alignParentStart="true"
                android:layout_marginStart="10dp"
                android:layout_marginTop="10dp"
                android:checkMark="?android:attr/listChoiceIndicatorMultiple"
                android:checked="false"
                android:gravity="center"
                android:text="Paldea"
                android:textSize="22dp" />

            <CheckedTextView
                android:id="@+id/galarianBox"
                android:layout_width="wrap_content"
                android:layout_height="32dp"
                android:layout_below="@id/alolanBox"
                android:layout_centerHorizontal="true"
                android:layout_marginTop="10dp"
                android:checkMark="?android:attr/listChoiceIndicatorMultiple"
                android:checked="false"
                android:gravity="center"
                android:text="Galar"
                android:textSize="22dp" />

            <CheckedTextView
                android:id="@+id/gmaxBox"
                android:layout_width="wrap_content"
                android:layout_height="32dp"
                android:layout_below="@id/hisuianBox"
                android:layout_alignParentRight="true"
                android:layout_marginTop="10dp"
                android:layout_marginEnd="10dp"
                android:layout_marginRight="11dp"
                android:checkMark="?android:attr/listChoiceIndicatorMultiple"
                android:checked="false"
                android:gravity="center"
                android:text="Gmax"
                android:textSize="22dp" />
        </RelativeLayout>
    </ScrollView>


    <RelativeLayout
        android:id="@+id/ad_holder1"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        app:layout_constraintTop_toTopOf="parent"
        >

        <com.google.android.gms.ads.AdView
            android:id="@+id/adView"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentTop="true"
            android:layout_centerHorizontal="true"
            app:adSize="BANNER"
            app:adUnitId="ca-app-pub-7333155271230991/6599534493">

        </com.google.android.gms.ads.AdView>

    </RelativeLayout>

    <RelativeLayout
        android:id="@+id/ad_holder2"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        app:layout_constraintBottom_toBottomOf="parent">

        <com.google.android.gms.ads.AdView
            android:id="@+id/adView2"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerHorizontal="true"
            app:adSize="BANNER"
            app:adUnitId="ca-app-pub-7333155271230991/6599534493">

        </com.google.android.gms.ads.AdView>

    </RelativeLayout>


</androidx.constraintlayout.widget.ConstraintLayout>
